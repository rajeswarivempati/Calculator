<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    tools:context="com.example.dhanya.myapplication.Main4Activity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
    android:id="@+id/result"
    android:layout_width="0dp"
        android:layout_weight="1"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:height="45dp"
    android:background="#FFFFFF" />

    <Button
        style="@style/Button"
        android:background="@drawable/ic_backspace_black_18px"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_marginRight="20dp"
        android:id="@+id/back"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <Button
            style="@style/Button"
            android:text="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/one"

            />
        <Button
            style="@style/Button"
            android:text="2"
            android:layout_marginRight="20dp"
            android:id="@+id/two"
            />
        <Button
            style="@style/Button"
            android:text="3"

            android:layout_marginRight="20dp"
            android:id="@+id/three"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            style="@style/Button"
            android:text="4"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/four"

            />
        <Button
            style="@style/Button"
            android:text="5"
            android:layout_marginRight="20dp"
            android:id="@+id/five"
            />
        <Button
            style="@style/Button"
            android:text="6"

            android:layout_marginRight="20dp"
            android:id="@+id/six"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            style="@style/Button"
            android:text="7"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/seven"

            />
        <Button
           style="@style/Button"
            android:text="8"
            android:layout_marginRight="20dp"
            android:id="@+id/eight"
            />
        <Button
            style="@style/Button"
            android:text="9"

            android:layout_marginRight="20dp"
            android:id="@+id/nine"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                style="@style/Button"
                android:text="sin"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/sin"

                />
            <Button
                style="@style/Button"
                android:text="cos"
                android:layout_marginRight="20dp"
                android:id="@+id/cos"
                />
            <Button
                style="@style/Button"
                android:text="tan"

                android:layout_marginRight="20dp"
                android:id="@+id/tan"/>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            style="@style/Button"
            android:text="cosec"
            android:id="@+id/cosec"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            />
        <Button
            style="@style/Button"
            android:text="sec"
            android:id="@+id/sec"
            android:layout_marginRight="20dp"
            />
        <Button
            style="@style/Button"
            android:text="cot"
            android:id="@+id/cot"

            android:layout_marginRight="20dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            style="@style/Button"
            android:text="0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/zero"/>
        <Button
            style="@style/Button"
            android:text="="
            android:layout_marginRight="20dp"
            android:id="@+id/equal"/>

        <Button
            android:id="@+id/clr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"


            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/root"
            android:background="@color/colorPrimary"
            android:text="@string/clear"
            android:textAllCaps="false"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>